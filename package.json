{
  "name": "site",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "product-sans-webfont": "^1.0.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-loading-skeleton": "^2.0.1",
    "react-scripts": "^3.4.1",
    "styled-components": "^5.1.0",
    "styled-theme": "^0.3.3",
    "typeface-spartan": "^1.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "predeploy": "yarn run build",
    "deploy": "firebase deploy --only hosting:abhisheknairoficial",
    "build": "react-scripts build",
    "test": "react-scripts test --watchAll --coverage",
    "test:build": "react-scripts test --watchAll=false -u",
    "eject": "react-scripts eject",
    "lint": "eslint ./ --fix"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "18.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^3.0.0",
    "husky": "^4.2.5",
    "prettier": "^2.0.5",
    "react-test-renderer": "^16.13.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && yarn test:build && git add ."
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!**/node_modules/**",
      "!**/vendor/**",
      "!**/serviceWorker.js",
      "!src/index.js"
    ]
  },
  "homepage": "https://abhisheknairofficial.com"
}
